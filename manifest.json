{
  "manifest_version": 2,
  "name": "Shreksy",
  "version": "0.1.0",
  "description": "Shreksy innit",
  "icons": { "16": "./images/icon.png",
    "48": "./images/icon.png",
   "128": "./images/icon.png" },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
   }, 

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}